<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Player 1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Player 2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/player1"
        app:layout_constraintStart_toStartOf="@+id/player1"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/player2"
        app:layout_constraintStart_toStartOf="@+id/player2"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <TextView
        android:id="@+id/winnertext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score2" />

    <Button
        android:id="@+id/button0"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        android:insetLeft="5dp"
        android:textSize="60sp"
        android:tag="0"
        android:textStyle="bold"
        app:backgroundTint="#787474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winnertext" />

    <Button
        android:id="@+id/button1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:tag="1"
        android:textStyle="bold"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:tag="2"
        android:textStyle="bold"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="5dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:tag="3"
        app:backgroundTint="#787474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:tag="4"
        android:textStyle="bold"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:tag="5"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="5dp"
        android:textSize="60sp"
        android:tag="6"
        android:textStyle="bold"
        app:backgroundTint="#787474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:tag="7"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:insetLeft="3dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:tag="8"
        app:backgroundTint="#787474"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NEW GAME"
        app:backgroundTint="#322424"
        android:onClick="playagain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />


</androidx.constraintlayout.widget.ConstraintLayout>